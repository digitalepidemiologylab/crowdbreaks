<tr>
  <td><%= current_project.title %></td>
  <td><%= current_project.es_index_name %></td>
  <td><%= truncate(current_project&.keywords&.join(', '), length: 80, separator: ',') %></td>
  <td><%= current_project&.lang&.join(', ') %></td>
  <td><%= current_project.storage_mode %></td>
  <td><%= status_yes_no(current_project.active_stream?) %></td>
  <td><%= status_yes_no(current_project.covid?) %></td>
  <td><%= status_yes_no(current_project.auto_mturking?) %></td>
  <td>
    <span class="no-wrap">
      <% if can? :read, current_project %>
        <%= link_to fa_icon('eye'), admin_project_path(current_project, link_from: link_from), title: 'Show' %>
      <% end %>
      <% if can? :destroy, current_project %>
        <%= link_to fa_icon("trash"), admin_project_path(current_project, link_from: link_from),
          method: :delete,
          data: {confirm: "Delete current_project?"} %>
      <% end %>
      <% if can? :update, current_project %>
        <%= link_to fa_icon("pencil"), edit_admin_project_path(current_project, link_from: link_from)  %>
      <% end %>
    </span>
  </td>
</tr>
