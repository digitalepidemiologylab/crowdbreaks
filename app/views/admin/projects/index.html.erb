<% @title ||= 'Projects'; title @title %>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <h2 class='mb-4'>Projects</h2>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <%= paginate @projects %>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <table class="table">
      <thead>
        <tr>
          <th>Project</th>
          <th>Name</th>
          <th># question sequences</th>
          <th>Keywords</th>
          <th>Lanugages</th>
          <th>Locales</th>
          <th>Public?</th>
          <th>Active stream?</th>
          <th>COVID-19 substream?</th>
          <th>Auto MTurking?</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "project", collection: @projects %>
      </tbody>
    </table>
  </div>
</div>

<% if can? :create, Project %>
  <div class="row justify-content-center mb-4">
    <div class="col-12">
      <%= link_to 'New Project', new_admin_project_path, class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
